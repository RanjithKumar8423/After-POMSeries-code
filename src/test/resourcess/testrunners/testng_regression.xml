<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TestNG Regression Suite" verbose="5" thread-count="5"
	parallel="tests">


<listeners>
		
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
			
		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />
		
	</listeners>

	<test name="OPEN CARTLogin Test">
		<parameter name="browser" value="chrome" />

		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="OPENCARTAccountsPage Test">
		<parameter name="browser" value="chrome" />

		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>


	<test name="OPENCARTSearchResultPage Test">
		<parameter name="browser" value="chrome" />

		<classes>
			<class name="com.qa.opencart.tests.SearchResultPageTest" />
		</classes>
	</test>

	<test name="OPENCARTproductinfo Test">
	<parameter name="browser" value="chrome" />

		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>

</suite>
